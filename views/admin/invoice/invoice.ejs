<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        .invoice-container {
            width: 80%;
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header img {
            max-height: 50px;
        }
        .invoice-details{
            display: flex;
            justify-content: space-between;
            align-items: center;
            & .billedTo{
                text-align: right;
                width: 200px;
            }
        }
        .header div {
            text-align: right;
        }
        h1 {
            margin: 0;
            font-size: 32px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table th, table td {
            padding: 10px;
            text-align: left;
        }
        table th {
            background-color: #333;
            color: #fff;
        }
        table tr:nth-child(even) {
            background-color: #f7f7f7;
        }
        .total-row td {
            font-weight: bold;
            font-size: 18px;
        }
        .payment-info {
            font-size: 14px;
            margin-top: 30px;
        }
        .payment-info p {
            margin: 5px 0;
        }
        .footer {
            text-align: right;
            font-size: 12px;
            margin-top: 20px;
        }
        .footer-row{
            text-align: right;
        }
    </style>
</head>
<body>

    <div class="invoice-container">
        <div class="header">
            <div>
                <h2>SHIVAM HOSIERY</h2>
            </div>
            <div style="width: 200px;">
                <p><strong>From:</strong></p>
                <p>Shivam Hosiery</p>
                <p >Sadarganj,Sahiktra(Oppsite of Pawan Takies), Mariahu, Jaunpur, Uttar Pradesh, India 222161</p>
                <p>+919918300361</p>
            </div>
        </div>

        <div class="invoice-details">
            <div>
                <p><strong>Invoice No:</strong> 123</p>
                <p><strong>Date:</strong> January 16, 2023</p>
            </div>
            <div class="billedTo">
                <p><strong>BILLED TO:</strong></p>
                <p>Estelle Darcy</p>
                <p>123 Anywhere St., Any City</p>
                <p>+123-456-7890</p>
            </div>
        </div>

        <table border="1">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>ITEM DESCRIPTION</th>
                    <th>HSN/SAC CODES</th>
                    <th>QTY</th>
                    <th>UNIT</th>
                    <th>PRICE</th>
                    <th>TOTAL</th>
                </tr>
            </thead>
            <tbody>
                <% items.map((element,index)=>{  %>
                    <tr>
                        <td><%-(index+1)  %></td>
                        <td><%-element.itemDescription %></td>
                        <td><%-element.HSNCode %></td>
                        <td><%-element.qty  %></td>
                        <td><%-element.unit  %></td>
                        <td><%-element.price  %></td>
                        <td><%-element.total  %></td>
                    </tr>
                <% }) %>
            </tbody>
            <tfoot>
                <tr class="total-row">
                    <td class="footer-row" colspan="6">SUB TOTAL AMOUNT :</td>
                    <td>₹<%-subTotal  %></td>
                </tr>
                <tr class="total-row">
                    <td class="footer-row" colspan="6">SGST :</td>
                    <td>₹<%-sgst  %></td>
                </tr>
                <tr class="total-row">
                    <td class="footer-row" colspan="6">CGST :</td>
                    <td>₹<%-cgst  %></td>
                </tr>
                <tr class="total-row">
                    <td class="footer-row" colspan="6">Discount :</td>
                    <td>₹<%-discount  %></td>
                </tr>
                <tr class="total-row">
                    <td class="footer-row" colspan="6">TOTAL AMOUNT :</td>
                    <td>₹<%-total  %></td>
                </tr>
            </tfoot>
        </table>

        <div class="payment-info">
            <p><strong>Please make payments to:</strong></p>
            <p>Shivam Hosiery</p>
            <p>Bank Name: Fauget</p>
            <p>Account No.: 1234-5678-90</p>
        </div>

        <div class="footer">
            <p>Shivam Hosiery</p>
            <p>Sadarganj,Sahiktra(Oppsite of Pawan Takies), Mariahu, Jaunpur, Uttar Pradesh, India 222161</p>
        </div>
    </div>

</body>
</html>
